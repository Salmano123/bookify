<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bookify" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:fontFamily">@font/rasa_regular</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:statusBarColor">@color/background_light</item>
    </style>
    <style name="Theme.BookifySplashScreen" parent="Theme.Bookify" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Bookify</item>
    </style>

    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/secondary</item>
    </style>

    <style name="BottomNavThemeOverlay" parent="Theme.MaterialComponents.Light.NoActionBar">
    </style>

    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="color">@color/primary</item>
    </style>
</resources>